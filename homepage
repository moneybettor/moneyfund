<body>
    <div id="particles-js"></div>
    <div id="particles-js-secondary"></div>
    <div class="content">
        <div class="hero">
            <h2>World's Biggest Hedge Fund</h2>
            <p>The Ticker is MONEY</p>
            <a href="https://moneyfund.com/aboutmoney" class="cta-button" id="cta-button">Read The Whitepaper</a>
        </div>
    </div>
    <!-- Include particles.js library for background effect -->
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        // Primary particles configuration
        particlesJS("particles-js", {
            particles: {
                number: { value: 100, density: { enable: true, value_area: 800 } },
                color: { value: "#a8b5a2" }, /* Muted green */
                shape: { type: "circle" },
                opacity: { value: 0.5, random: true },
                size: { value: 3, random: true },
                move: { enable: true, speed: 1.5, direction: "none", random: false }
            },
            interactivity: {
                detect_on: "canvas",
                events: { onhover: { enable: true, mode: "repulse" }, onclick: { enable: true, mode: "push" } },
                modes: { repulse: { distance: 100, duration: 0.4 }, push: { particles_nb: 3 } }
            }
        });

        // Secondary particles configuration
        particlesJS("particles-js-secondary", {
            particles: {
                number: { value: 40, density: { enable: true, value_area: 1000 } },
                color: { value: "#d4a017" }, /* Subtle gold */
                shape: { type: "circle" },
                opacity: { value: 0.4, random: true },
                size: { value: 5, random: true },
                move: { enable: true, speed: 0.8, direction: "none", random: false }
            },
            interactivity: {
                detect_on: "canvas",
                events: { onhover: { enable: false }, onclick: { enable: false } },
                modes: {}
            }
        });

        // Button rotation logic
        const buttons = [
            { text: "Read The Whitepaper", href: "https://moneyfund.com/aboutmoney" },
            { text: "Create a Wallet", href: "/wallets" },
            { text: "Launch a Coin", href: "/deploy" },
            { text: "Launch a Fund", href: "/launcher" },
            { text: "Launch a DAO", href: "/voter" },
            { text: "Launch a Dividend Pool", href: "/stake" },
            { text: "Swap Tokens", href: "/DEX" },
            { text: "Vote", href: "/vote" },
            { text: "Claim Dividends", href: "/dividends" },
            { text: "Mass Airdrop", href: "/Airdropper" },
            { text: "Gamble", href: "/blackjack" },
            { text: "Chat", href: "/chat" }
        ];

        let currentButtonIndex = 0;
        const ctaButton = document.getElementById("cta-button");

        function rotateButton() {
            ctaButton.classList.remove("slide-in");
            ctaButton.classList.add("slide-out");

            setTimeout(() => {
                currentButtonIndex = (currentButtonIndex + 1) % buttons.length;
                ctaButton.textContent = buttons[currentButtonIndex].text;
                ctaButton.href = buttons[currentButtonIndex].href;
                ctaButton.classList.remove("slide-out");
                ctaButton.classList.add("slide-in");
            }, 600); /* Match slide-out animation duration */
        }

        // Initial slide-in
        ctaButton.classList.add("slide-in");

        // Rotate every 2.2 seconds
        setInterval(rotateButton, 2200);
    </script>
